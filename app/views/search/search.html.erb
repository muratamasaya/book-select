<div class="search-box">
<div class="search-title">
<h1>気になる本のタイトル、作者を入力してください。</h1>
</div>
<div class="image1">
<%= image_tag 'no-15.jpg', size: '500x400' %>
</div>
<%= form_with url: search_search_path, method: :get, local: true do |f| %>
       <div class="form-group">
        <%= f.text_field :keyword, class: "form-control", required: true %>
        <%= f.submit '本の題名を検索', class: "form-control btn btn-success" %>
        <% end %>
        </div>
        <div class="book_ans">
<% if @books.present? %>
<%= render 'layouts/book'%>
<% end %>
</div>

